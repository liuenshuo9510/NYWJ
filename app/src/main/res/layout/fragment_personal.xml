<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <ImageView
        android:id="@+id/personal_picture"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/personalfragment_img"/>
    <TextView
        android:id="@+id/nickname_view"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_below="@id/personal_picture"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="雪落无声"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brief_introduction_view"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_below="@id/nickname_view"
        android:layout_marginTop="0dp"
        android:text="既然选择了远方，便只顾风雨兼程!"
        android:gravity="center"
        android:textSize="18sp"
        />

    <android.support.percent.PercentRelativeLayout
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="100%"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/nickname"
            app:layout_heightPercent="24%"
            app:layout_widthPercent="100%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人昵称"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/usercenter_goto"/>
        </RelativeLayout>

        <View
            android:id="@+id/personal_page_line1"
            app:layout_heightPercent="1%"
            app:layout_widthPercent="100%"
            android:layout_below="@id/nickname"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </View>

        <RelativeLayout
            android:id="@+id/brief_introduction"
            android:layout_below="@id/personal_page_line1"
            app:layout_heightPercent="24%"
            app:layout_widthPercent="100%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/usercenter_goto"/>
        </RelativeLayout>

        <View
            android:id="@+id/personal_page_line2"
            android:layout_below="@id/brief_introduction"
            app:layout_heightPercent="1%"
            app:layout_widthPercent="100%"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </View>

        <RelativeLayout
            android:id="@+id/change_password"
            android:layout_below="@id/personal_page_line2"
            app:layout_heightPercent="24%"
            app:layout_widthPercent="100%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/usercenter_goto"/>
        </RelativeLayout>

        <View
            android:id="@+id/personal_page_line3"
            app:layout_heightPercent="1%"
            app:layout_widthPercent="100%"
            android:layout_below="@id/change_password"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </View>

        <RelativeLayout
            android:id="@+id/problem_feedback"
            android:layout_below="@id/personal_page_line3"
            app:layout_heightPercent="24%"
            app:layout_widthPercent="100%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APP问题反馈"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/usercenter_goto"/>
        </RelativeLayout>

        <View
            android:id="@+id/personal_page_line4"
            app:layout_heightPercent="1%"
            app:layout_widthPercent="100%"
            android:layout_below="@id/problem_feedback"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </View>

    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>